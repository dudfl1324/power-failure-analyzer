def get_script_dir():
    if getattr(sys, 'frozen', False):
        return os.path.dirname(sys.executable)
    try:
        return os.path.dirname(os.path.abspath(__file__))
    except NameError:
        return os.getcwd()


SCRIPT_DIR = get_script_dir()

# v3 uses the renamed config file (same as v2)
CONFIG_FILE = os.path.join(SCRIPT_DIR, "AutoPowerTester_Configuration.json")


def load_config():
    if not os.path.exists(CONFIG_FILE):
        temp_root = tk.Tk(); temp_root.withdraw()
        messagebox.showerror(
            "Missing Configuration",
            'Put "AutoPowerTester_Configuration.json" file in the same folder as AutoPowerTester.exe'
        )
        temp_root.destroy()
        raise SystemExit(1)

    with open(CONFIG_FILE, "r", encoding="utf-8") as f:
        data = json.load(f)

    try:
        mv = data["MODEL_VOLTAGE_MAP"]
        mc = data["MODEL_CRITERIA"]
    except KeyError as e:
        temp_root = tk.Tk(); temp_root.withdraw()
        messagebox.showerror(
            "Invalid Configuration",
            f'Missing key in "AutoPowerTester_Configuration.json": {e}\n',
            f'Make sure it contains "MODEL_VOLTAGE_MAP" and "MODEL_CRITERIA".'
        )
        temp_root.destroy()
        raise SystemExit(1)

    workers = data.get("WORKERS", {})

    if "POWER_SUPPLIES" in data:
        ps_list = data.get("POWER_SUPPLIES", [])
    else:
        addr = data.get("POWER_SUPPLY_ADDRESS", "GPIB0::6::INSTR")
        ps_list = [{"name": "PSU1", "address": addr}]

    if not ps_list:
        ps_list = [{"name": "PSU1", "address": "GPIB0::6::INSTR"}]

    ps_list = ps_list[:4]
    return mv, mc, workers, ps_list


